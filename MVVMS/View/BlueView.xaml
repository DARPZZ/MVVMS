<UserControl x:Class="MVVMS.View.BlueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MVVMS.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel VerticalAlignment="Center">
        <Label Content="The Blue page" Background="Blue"></Label>
        <Button x:Name="ChangePage" Width="200" Content="Change Page" Command="{Binding ChangePageCMD}" />
    </StackPanel>

</UserControl>


